<section class="signup">
  <%= tag.div(flash[:alert], style: "color:red") if flash[:alert] %>

  <%= form_with url: passwords_path do |form| %>
    <%= form.email_field :username, required: true, autofocus: true, autocomplete: "username", placeholder: "Enter your email address or tag", value: params[:username] %>
    <%= form.submit "Email reset instructions" %>
  <% end %>
</section>
